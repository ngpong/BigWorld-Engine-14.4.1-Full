excludePathPatterns \.swp$
excludePathPatterns \.svn
excludePathPatterns \.nfs
excludePathPatterns /\.
excludePathPatterns svn-commit\.tmp

add game/bin/server/%{platform_config}/tools/bwmachined2,%{bwmachined_sbin_file},550
addConfig game/tools/bigworld/server/rpm/bwmachined/bwmachined.conf,%{_sysconfdir}/bwmachined.conf,744
addConfig game/tools/bigworld/server/rpm/bwmachined/sysctld_bwmachined2.conf,%{_sysconfdir}/sysctl.d/bwmachined2.conf,744

# The init.d script
add game/tools/bigworld/server/install/bwmachined2.sh,%{bwmachined_initd_file},554
filter %{bwmachined_initd_file} |sed s#^SBINDIR=.*#SBINDIR=%{bwmachined_sbin_dir}#

# The systemd unit file
add game/tools/bigworld/server/install/systemd/bwmachined2.service,%{_unitdir}/bwmachined2.service,0644
filter %{_unitdir}/bwmachined2.service     |sed 's~###bwmachined_initd_file###~%{bwmachined_initd_file}~'
filter %{_unitdir}/bwmachined2.service     |sed 's~###pid_dir###~%{pid_dir}~'

dir %{bwmachined_sbin_dir},544
dir %{bwmachined_initd_dir},544
dir %{bwmachined_dir},544

dir %{bigworld_dir},555
dir %{bigworld_current_dir},555
dir /opt/bigworld,555

link %{bwmachined_dir},%{bigworld_current_dir}/bwmachined,0555
