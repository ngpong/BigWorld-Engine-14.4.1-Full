<root>
	<realms>
		<!-- This is the list of spaces that will be loaded by the server on 
			startup. They are categorised into different "realms", which the
			user chooses on login to the server. 
			
			The first space listed within a realm is the space the user is
			teleported into when they choose the realm.

			Note that spaces are auto-loaded on start-up due to the SpaceLoader 
			entities being marked for auto-load when calling writeToDB(). To 
			clear this data, use the clear_auto_load tool. 

		-->
	
		<realm>
			<name>				fantasy	</name>
			<displayName>		Fantasy Realm	</displayName>
			<spaces>
				<space>		spaces/highlands	</space>
				<space>		spaces/arctic		</space>
			</spaces>
		</realm>
		
		<realm>
			<name>				minspec			</name>
			<displayName>		MinSpec Realm		</displayName>
			<spaces>
				<space>		spaces/minspec		</space>
			</spaces>
		</realm>
	</realms>

	<offlineModeIgnoredSpaces>
		<space>		spaces/menu_space	</space>
	</offlineModeIgnoredSpaces>

	<gameSecondsPerSecond>	6	</gameSecondsPerSecond>
</root>
